<h1>Places</h1>

<p>
  <a class="btn btn-primary" href="/places/new">New place</a>
</p>


<div class="container">
  <div class="row">
    <% for place in @places %>
      <div class="col-3 m-4">
        <a class="btn btn-secondary" href="/places/<%= place["id"] %>"><%= place["name"] %></a>
      </div>
    <% end %>
  </div>
</div>
