
<div class = "container">
<div class="row">
  <% for post in @posts %>
    <div class="col-3 m4">
      <h4>
        <%# find user who created post %>
        <% user = User.find_by({ "id" => post["user_id"] }) %>
        <%# handle any potential bad data where the post is missing a user %>
        <% if user %>
          <%= user["username"] %>
        <% else %>
          anonymous
        <% end %>
      <a class="btn btn-secondary" href="/places/<%= place["id"] %>"><%= post["title"] %></a>
      </h4>

      <p><%= post["body"] %></p>
    </div>
  <% end %>
</div>


<div class="container">
  <div class="row">
    <% for place in @places %>
      <div class="col-3 m-4">
        <a class="btn btn-secondary" href="/places/<%= place["id"] %>"><%= place["name"] %></a>
      </div>
    <% end %>
  </div>
</div>