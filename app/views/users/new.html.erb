<h1 class = "pt-4"> New User Account</h1>

<%= form_with :model => @user do |form| %>
  <p>
    <%= form.label "username" %>
    <%= form.text_field "username" %>
  </p>
  <p>
    <%= form.label "email" %>
    <%= form.text_field "email" %>
  </p>
  <p>
    <%= form.label "password" %>
    <%= form.password_field "password" %>
  </p>
  <p>
   <button type="button" class="btn btn-primary"><%= form.submit "Sign up" %></button>
  </p>
<% end %>